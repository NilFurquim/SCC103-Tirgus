<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <BorderPane styleClass="container">
            <left>
                <Label mnemonicParsing="true" text="_Search" BorderPane.alignment="CENTER_RIGHT"/>
            </left>
            <center>
                <TextField fx:id="searchField" focusTraversable="true"/>
            </center>
        </BorderPane>
    </top>
    <center>
        <TableView fx:id="productsTable">
            <columns>
                <TableColumn text="Name" fx:id="nameCol"/>
                <TableColumn text="Price" fx:id="priceCol"/>
                <TableColumn text="Quantity" fx:id="quantityCol"/>
                <TableColumn text="Provider" fx:id="providerCol"/>
                <TableColumn text="Validity" fx:id="validityCol"/>
            </columns>
        </TableView>
    </center>
</fx:root>
