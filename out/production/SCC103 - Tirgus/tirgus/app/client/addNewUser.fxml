<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane styleClass="container" prefWidth="400" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="tirgus.app.client.AddNewUserController" >
    <stylesheets>
        <URL value="@../tirgus.css" />
    </stylesheets>

    <columnConstraints>
        <ColumnConstraints fillWidth="false" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

    <Label text="Name" GridPane.rowIndex="0" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Address" GridPane.rowIndex="1" />
    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Telephone" GridPane.rowIndex="2" />
    <TextField fx:id="telField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="E-mail" GridPane.rowIndex="3" />
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Login" GridPane.rowIndex="4" />
    <TextField fx:id="loginField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Password" GridPane.rowIndex="5" />
    <PasswordField fx:id="passField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Button text="Register" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="6"
            onAction="#onRegister"/>

</GridPane>
